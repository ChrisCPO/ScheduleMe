<%= form_for @user do |form| %>

  <%= render partial: "form_errors/errors", locals: {object: @user} %>

  <div>
    <%= form.label :username, "Name" %>
    <%= form.text_field :username %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.submit "Update" %>
  </div>
<% end %>
