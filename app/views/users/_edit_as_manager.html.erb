<%= form_for @user do |form| %>

  <%= render partial: "form_errors/errors", locals: {object: @user} %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>
  <div>
    <%= form.label :role %>
    <%= select(:user, :role, User.roles, selected: @user.role_value) %>
  </div>
  <div>
    <%= form.submit "Update employee" %>
  </div>
<% end %>
