<h3> <%= @location.name %> </h3>

  <div>
    <% if current_user.manager? %>
      <p> You are a <%== current_user.role %> at this location </p>
      <%= link_to "Add Employee", new_location_user_path(@location) %>
    <% end %>
  </div>

  <div>
    <%= link_to "View Employees", location_users_path(@location) %>
  </div>
